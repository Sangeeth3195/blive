<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/profile_image_circle_other"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/profile_image_other"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/user" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/comment_text_by_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:layout_toRightOf="@+id/profile_image_circle_other"
        android:background="@drawable/rounded_corner_bg"
        android:padding="10dp"
        android:text=""
        android:textColor="@color/black" />

    <androidx.cardview.widget.CardView
        android:id="@+id/profile_image_circle_me"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/comment_text_by_other"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="0dp"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/profile_image_me"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/user" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/comment_text_by_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comment_text_by_other"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/rounded_corner_bg"
        android:padding="10dp"
        android:text=""
        android:textColor="@color/black" />

</RelativeLayout>