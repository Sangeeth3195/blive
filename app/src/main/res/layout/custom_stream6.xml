<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="54dp"
    android:layout_marginTop="50dp"
    android:layout_below="@+id/top_area"
    android:weightSum="4"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3">

        <FrameLayout
            android:id="@+id/first_guestgroup6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="end|center"
            tools:ignore="NestedWeights" />

        <FrameLayout
            android:id="@+id/broadcaster_group6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="end" />

        <FrameLayout
            android:id="@+id/second_guestgroup6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="end" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:weightSum="3">

        <FrameLayout
            android:id="@+id/third_guestgroup6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="end|center"
            tools:ignore="NestedWeights" />

        <FrameLayout
            android:id="@+id/fourth_guestgroup6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="end" />

        <FrameLayout
            android:id="@+id/fifth_guestgroup6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="end" />

    </LinearLayout>

</LinearLayout>