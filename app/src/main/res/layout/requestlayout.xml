<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:background="@drawable/dialog_bx"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_profile"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:src="@drawable/all" />

        <TextView
            android:id="@+id/text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/app_name"
            android:textColor="@color/colorPrimaryDark" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/accept_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bg_accept"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_telephone"
                android:layout_margin="0dp"
                android:textColor="@color/white"
                android:paddingLeft="5dp"
                android:text="Accept" />


            <Button
                android:id="@+id/reject_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/button_bg_reject"
                android:layout_weight="1"
                android:layout_margin="0dp"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_end_call"
                android:paddingLeft="5dp"
                android:textColor="@color/white"
                android:text="Reject" />


        </LinearLayout>





    </LinearLayout>

</androidx.cardview.widget.CardView>
