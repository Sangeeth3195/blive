<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#FF0C0C" />
            <gradient android:angle="-90" android:startColor="#FF0C0C" android:endColor="#FF0C0C"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#FF0C0C" />
            <solid android:color="#FF0C0C"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="18dip" />
            <stroke android:width="1dip" android:color="#FF1984" />
            <gradient android:angle="-90" android:startColor="#FF1984" android:endColor="#FF1984" />
        </shape>
    </item>
</selector>